@model IEnumerable<CMTLabs.Models.Administrator.LookupCategoiresObjectModel>

@{
    ViewBag.Title = "LookupCategoriesHome";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Lookup Categories</h2>

<p>
    @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-primary btn-lg" })
</p>
@if (Model.Count() > 0)
{
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CategoryName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreatedDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ModifedDate)
            </th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.CategoryName)
                </td>
                <td>
                    @Html.Label($"{item.CreatedDate.Date.Month}/{item.CreatedDate.Day}/{item.CreatedDate.Year}")
                </td>
                <td>
                    @Html.Label($"{item.ModifedDate.Date.Month}/{item.ModifedDate.Day}/{item.ModifedDate.Year}")
                </td>
                <td>
                    @Html.ActionLink("Edit", "EditLookupCategory", new { Id = item.LookupCategoryId }) |
                    @Html.ActionLink("View Lookups Under This Category", "Details", new { Id = item.LookupCategoryId })
                </td>
            </tr>
        }

    </table>

}
<div>
    @Html.ActionLink("Back", "AdminHome", "Admin", null, new { @class = "btn btn-primary btn-lg" })
</div>