@model IEnumerable<CMTLabs.Models.Administrator.LookupCategoiresObjectModel>

@{
    ViewBag.Title = "LookupCategoriesHome";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Lookup Categories</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
@if (Model.Count() > 0)
{
    <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.CategoryName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CreatedDate)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.CategoryName)
                    </td>
                    <td>
                        @Html.Label($"{item.CreatedDate.Date.Month}/{item.CreatedDate.Day}/{item.CreatedDate.Year}")
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }) |
                        @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ })
                    </td>
                </tr>
            }

        </table>

}
<div>
    @Html.ActionLink("Back", "AdminHome", "Admin", null, new { @class = "btn btn-primary btn-lg" })
</div>